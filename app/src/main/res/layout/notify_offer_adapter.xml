<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentOffers">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:padding="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="5dp"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/offers_border"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/offer_image"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:scaleType="fitXY"
                android:src="@drawable/rec_100"/>

            <TextView
                android:id="@+id/offer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save upto 20% off"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:fontFamily="@font/lato_bold"
                android:paddingStart="16dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/offer_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We have  high quality metalic finish plywood"
                android:textColor="@color/violet"
                android:fontFamily="@font/lato"
                android:paddingStart="16dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"/>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>