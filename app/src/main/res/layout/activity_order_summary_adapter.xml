<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/catimage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/doors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:text="@string/wooden_waterproof_plywood_sheet_thickness_18_mm"
        android:textColor="@color/netural_black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/catimage"
        app:layout_constraintTop_toTopOf="@+id/catimage" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/_59"
        android:textColor="@color/primary_blue"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="117dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/square_feet"
        android:textColor="@color/netural_black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <ImageView
        android:id="@+id/textView15"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_delete_outline_24"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/minusbtn"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:background="@color/grey_white"
        android:paddingBottom="7dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/minus"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />


    <TextView
        android:id="@+id/numbercount"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@color/grey_white"
        android:hint="1"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/minusbtn"
        app:layout_constraintTop_toTopOf="@+id/minusbtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plusbtn"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:background="@color/grey_white"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:text="@string/add"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/numbercount"
        app:layout_constraintTop_toTopOf="@+id/numbercount" />

</androidx.constraintlayout.widget.ConstraintLayout>