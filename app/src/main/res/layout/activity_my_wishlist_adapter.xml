<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/wishimage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"

        android:src="@drawable/doors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/prodetailLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wishimage">


    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/wooden_waterproof_plywood_sheet_thickness_18_mm"
        android:textColor="@color/netural_black"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textStyle="bold"/>
        <ImageView
            android:id="@+id/heart"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:src="@drawable/ic_baseline_favorite_24"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/_59"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold"
        android:textColor="@color/primary_blue"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/prodetailLayout"
        app:layout_constraintTop_toBottomOf="@+id/prodetailLayout" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:text="@string/square_feet"
        android:textColor="@color/netural_black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintBottom_toBottomOf="@id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/prodetailLayout" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/_84"
        android:fontFamily="@font/roboto"
        android:background="@drawable/strike_through"
        android:textColor="@color/netural_grey"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="@id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="24% Off"
        android:fontFamily="@font/poppins_bold"
        android:textSize="12sp"
        android:textColor="@color/primary_red"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintBottom_toBottomOf="@id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />



    <ImageView
        android:id="@+id/heart2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_favorite_border_black_24"
        app:layout_constraintStart_toEndOf="@+id/prodetailLayout"
        app:layout_constraintTop_toBottomOf="@+id/prodetailLayout" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/gr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wishimage" />
</androidx.constraintlayout.widget.ConstraintLayout>