<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/qutrequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/qutation_requested"
        android:textColor="@color/blue"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oderplaced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/order_placed"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderrecieved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/quotation_received"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ordercanceled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/order_cancelled"
        android:textColor="@color/red"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Order ID:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/qutrequest"
        app:layout_constraintTop_toBottomOf="@+id/qutrequest" />

    <TextView
        android:id="@+id/oderi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/orderid"
        app:layout_constraintTop_toBottomOf="@+id/qutrequest" />


    <TextView
        android:id="@+id/dtandtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Date and Time:"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/orderid"
        app:layout_constraintTop_toBottomOf="@+id/orderid" />

    <TextView
        android:id="@+id/te"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/dtandtime"
        app:layout_constraintTop_toBottomOf="@+id/orderid" />
    <TextView
        android:id="@+id/unit"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_marginStart="140dp"
        android:background="@color/white_gr"
        android:gravity="center"
        android:text="114 UNIT"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/qutrequest"
        app:layout_constraintTop_toTopOf="@+id/qutrequest" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/vector_msg"
        app:layout_constraintStart_toEndOf="@+id/unit"
        app:layout_constraintTop_toTopOf="@+id/unit" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/chat_icon2"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/unit"
        app:layout_constraintTop_toTopOf="@+id/unit" />

    <TextView
        android:id="@+id/helpbtn"
        android:layout_width="151dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/gr"
        android:text="Need help?"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/black_gr"
        app:layout_constraintStart_toStartOf="@+id/dtandtime"
        app:layout_constraintTop_toBottomOf="@+id/dtandtime" />

    <TextView
        android:id="@+id/detailsbtn"
        android:layout_width="151dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:background="@color/transperent"
        android:gravity="center"
        android:text="@string/view_details"
        android:textColor="@color/blue"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/helpbtn"
        app:layout_constraintTop_toTopOf="@+id/helpbtn" />


</androidx.constraintlayout.widget.ConstraintLayout>