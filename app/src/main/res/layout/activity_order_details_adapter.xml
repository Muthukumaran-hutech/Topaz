<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/or_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/plywoodbiards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        android:text=""
        android:layout_marginTop="10dp"
        android:textColor="@color/netural_black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/or_image"
        app:layout_constraintTop_toTopOf="@+id/or_image" />

    <TextView
        android:id="@+id/pri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="58/"
        android:textSize="@dimen/_17sdp"
        android:textColor="@color/primary_blue"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="@string/square_feet"
        android:textColor="@color/netural_black"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@+id/pri"
        app:layout_constraintBottom_toBottomOf="@id/pri"
        app:layout_constraintTop_toBottomOf="@+id/title" />



</androidx.constraintlayout.widget.ConstraintLayout>