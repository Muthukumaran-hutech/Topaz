<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".Activities.EditAddAddress">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_address_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/category_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/add_address"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/category_back_arrow"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_address_toolbar"
        app:layout_constraintVertical_bias="0.716">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView22"
                android:layout_width="101dp"
                android:layout_height="24dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="50dp"
                android:text="@string/contact_info"
                android:textColor="@color/violet"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="44dp"
                android:layout_height="21dp"
                android:layout_marginStart="49dp"
                android:layout_marginTop="30dp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />

            <EditText
                android:id="@+id/name_address"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedtext"
                android:hint="@string/name"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="105dp"
                android:layout_height="21dp"
                android:layout_marginStart="49dp"
                android:layout_marginTop="20dp"
                android:text="@string/phone_number"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_address" />

            <EditText
                android:id="@+id/phone_no_change"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedtext"
                android:hint="@string/phone_number"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/addinfo"
                android:layout_width="105dp"
                android:layout_height="21dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="30dp"
                android:text="@string/address_info"
                android:textColor="@color/violet"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_no_change" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="145dp"
                android:layout_height="21dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="20dp"
                android:text="@string/locality_area_street"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addinfo" />

            <EditText
                android:id="@+id/locality"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedtext"
                android:hint="@string/locality_area_street"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="160dp"
                android:layout_height="21dp"
                android:layout_marginStart="49dp"
                android:layout_marginTop="20dp"
                android:text="@string/flat_no_building_name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locality" />

            <EditText
                android:id="@+id/house_no"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedtext"
                android:hint="@string/flat_no_building_name"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView27" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="58dp"
                android:layout_height="21dp"
                android:layout_marginStart="49dp"
                android:layout_marginTop="20dp"
                android:text="@string/pincode"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/house_no" />

            <EditText
                android:id="@+id/pincode"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedtext"
                android:hint="@string/pincode"
                android:paddingStart="20dp"
                android:text=""
                android:maxLength="6"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView28" />


            <TextView
                android:id="@+id/textView29"
                android:layout_width="58dp"
                android:layout_height="21dp"
                android:layout_marginStart="219dp"
                android:layout_marginTop="20dp"
                android:text="@string/city"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/house_no" />

            <EditText
                android:id="@+id/city"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginStart="218dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedtext"
                android:hint="@string/city"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView29" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="38dp"
                android:layout_height="21dp"
                android:layout_marginStart="49dp"
                android:layout_marginTop="20dp"
                android:text="@string/state"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pincode" />

            <EditText
                android:id="@+id/state"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedtext"
                android:hint="@string/state"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView30" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="151dp"
                android:layout_height="21dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="20dp"
                android:text="@string/landmark_optional"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/state" />

            <EditText
                android:id="@+id/landmark"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:background="@drawable/roundedtext"
                android:hint="@string/landmark_optional"
                android:paddingStart="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView31" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="130dp"
                android:layout_height="21dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="30dp"
                android:text="@string/type_of_address"
                android:textColor="@color/violet"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/landmark" />

            <RadioGroup
                android:id="@+id/radiogrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="81dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView32">

                <RadioButton
                    android:id="@+id/radiohome"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radiooffice"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/office"
                    android:textColor="@color/black" />

            </RadioGroup>

            <CheckBox
                android:id="@+id/addresschckbox"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="52dp"
                android:background="@color/white_gr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radiogrp" />


            <TextView
                android:id="@+id/textView33"
                android:layout_width="186dp"
                android:layout_height="21dp"
                android:layout_marginStart="82dp"
                android:text="@string/mark_as_a_defalult_address"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radiogrp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save_address_btn"
                android:layout_width="321dp"
                android:layout_height="60dp"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/roundedbtndarkblue"
                android:text="@string/save_address"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView33" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
