<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.EmailChangeOtp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_address_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/category_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/otp_verifications"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/category_back_arrow"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="@string/enter_otp_to_change_email_address"
        android:textColor="@color/login_text1_color"
        android:textSize="14sp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:id="@+id/changeNewEmailLabel"
        app:layout_constraintStart_toStartOf="@id/otplinear"
        app:layout_constraintTop_toBottomOf="@id/edit_address_toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="@string/otp_sent_to_the_email_address"
        android:textColor="@color/login_text1_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/otplinear"
        android:id="@+id/NewEmailOTPSentLabel"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/changeNewEmailLabel"/>

    <LinearLayout
        android:id="@+id/otplinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NewEmailOTPSentLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_001"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/grey_rounded_border_filled"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:fontFamily="@font/poppins"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_002"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/grey_rounded_border_filled"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:fontFamily="@font/poppins"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_003"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/grey_rounded_border_filled"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:fontFamily="@font/poppins"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_004"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/grey_rounded_border_filled"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:fontFamily="@font/poppins"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_005"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/grey_rounded_border_filled"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:fontFamily="@font/poppins"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_006"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/grey_rounded_border_filled"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:fontFamily="@font/poppins"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/app_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/confirm_email_otp_2"
        app:layout_constraintEnd_toEndOf="@+id/confirm_email_otp_2"
        app:layout_constraintStart_toStartOf="@+id/confirm_email_otp_2"
        app:layout_constraintTop_toBottomOf="@+id/otplinear" />


    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text=""
        android:textColor="@color/dark_gray_color"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="2dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/otplinear"
        app:layout_constraintStart_toStartOf="@id/otplinear"/>

    <TextView
        android:id="@+id/dint_recieve"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="@string/didn_t_receive_otp"
        android:textColor="@color/dark_gray_color"
        android:fontFamily="@font/lato"
        android:layout_marginLeft="2dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/timer"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/otplinear"/>

    <TextView
        android:id="@+id/resend_otp_2"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="@string/resend_otp"
        android:textColor="@color/login_text1_color"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/timer"
        app:layout_constraintEnd_toEndOf="@id/otplinear"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_email_otp_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/blue_button_rounded_corner"
        android:text="@string/confirm_otp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/dint_recieve"/>


</androidx.constraintlayout.widget.ConstraintLayout>