<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.InvoiceDetails">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="23dp"
        android:text="@string/invoice_details"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/backarrow"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="15dp"
                android:src="@drawable/topaz"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tax_invoice"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"/>

            <ImageView
                android:layout_width="414dp"
                android:layout_height="wrap_content"
                android:src="@drawable/line_99"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/billname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pravat"
                android:textSize="14sp"
                android:textColor="@color/netural_black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/billemailid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pravat@hutech.com"
                android:textSize="14sp"
                android:textColor="@color/netural_black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/billno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invoice_no"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="-50dp"
                android:layout_marginStart="250dp"/>

            <TextView
                android:id="@+id/billno_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FFBB10010889DD"
                android:textSize="14sp"
                android:textColor="@color/netural_black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"/>

            <TextView
                android:id="@+id/billdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="January 26 2022"
                android:textSize="14sp"
                android:textColor="@color/netural_black"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"/>

            <ImageView
                android:layout_width="414dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/line_99"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/soldby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sold_by"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/sellername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold Plywood Industries"
                android:textSize="14sp"
                android:textColor="@color/netural_black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="19dp"/>

            <TextView
                android:id="@+id/selleraddress"
                android:layout_width="181dp"
                android:layout_height="70dp"
                android:text="92, 2nd Cross Rd, Pillanna Garden, Sagayapura, HBR Layout, Bengaluru, Karnataka 560084"
                android:textSize="14sp"
                android:textColor="@color/netural_black"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginStart="19dp"/>

            <TextView
                android:id="@+id/billingaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/billing_address"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="-125dp"
                android:layout_marginStart="220dp"/>

            <TextView
                android:id="@+id/customername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold Plywood Industries"
                android:textSize="14sp"
                android:textColor="@color/netural_black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="216dp"/>

            <TextView
                android:id="@+id/custaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/karnataka"
                android:textSize="14sp"
                android:textColor="@color/netural_black"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginStart="216dp"
                android:layout_marginEnd="5dp"/>



        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>