<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.ChangeOldEmailOtp">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_address_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/category_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/otp_verifications"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/category_back_arrow"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="243dp"
        android:layout_height="21dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="145dp"
        android:text="@string/enter_otp_to_change_email_address"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="170dp"
        android:text="@string/otp_sent_to_the_email_address"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/otplinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="27dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_01"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:background="@color/white_gr"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_02"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@color/white_gr"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_03"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@color/white_gr"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_04"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@color/white_gr"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_05"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@color/white_gr"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_06"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@color/white_gr"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TextViewEdits" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/app_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/confirm_email_otp"
        app:layout_constraintEnd_toEndOf="@+id/confirm_email_otp"
        app:layout_constraintStart_toStartOf="@+id/confirm_email_otp"
        app:layout_constraintTop_toBottomOf="@+id/otplinear" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="39dp"
        android:layout_height="19dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="347dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dint_recieve"
        android:layout_width="115dp"
        android:layout_height="19dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="369dp"
        android:text="@string/didn_t_receive_otp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resend_otp_2"
        android:layout_width="115dp"
        android:layout_height="19dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="369dp"
        android:text="@string/resend_otp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_email_otp"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="413dp"
        android:background="@color/btn"
        android:text="@string/confirm_otp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>