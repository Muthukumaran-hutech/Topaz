<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.EditAddAddress">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_address_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/category_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/add_address"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/category_back_arrow"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/edit_address_toolbar">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/textView18"
        android:layout_width="101dp"
        android:layout_height="24dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:text="@string/contact_info"
        android:textColor="@color/violet"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="44dp"
        android:layout_height="21dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="30dp"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <EditText
        android:id="@+id/name_address"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedtext"
        android:hint="@string/name"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="105dp"
        android:layout_height="21dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="20dp"
        android:text="@string/phone_number"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_address" />

    <EditText
        android:id="@+id/phone_no_change"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedtext"
        android:hint="@string/phone_number"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:id="@+id/addinfo"
        android:layout_width="105dp"
        android:layout_height="21dp"
        android:layout_marginStart="48dp"
        android:text="@string/address_info"
        android:layout_marginTop="30dp"
        android:textColor="@color/violet"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_no_change" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="145dp"
        android:layout_height="21dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:text="@string/locality_area_street"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addinfo" />

    <EditText
        android:id="@+id/locality"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/roundedtext"
        android:hint="@string/locality_area_street"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="160dp"
        android:layout_height="21dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="20dp"
        android:text="@string/flat_no_building_name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locality" />

    <EditText
        android:id="@+id/house_no"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/roundedtext"
        android:hint="@string/flat_no_building_name"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="58dp"
        android:layout_height="21dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="20dp"
        android:text="@string/pincode"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/house_no" />


    <EditText
        android:id="@+id/pincode"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/roundedtext"
        android:hint="@string/pincode"
        android:paddingStart="20dp"
        android:maxLength="6"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="58dp"
        android:layout_height="21dp"
        android:layout_marginStart="219dp"
        android:layout_marginTop="20dp"
        android:text="@string/city"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/house_no" />

    <EditText
        android:id="@+id/city"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="190dp"
        android:background="@drawable/roundedtext"
        android:hint="@string/city"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="38dp"
        android:layout_height="21dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="20dp"
        android:text="@string/state"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pincode" />

    <EditText
        android:id="@+id/state"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/roundedtext"
        android:hint="@string/state"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="151dp"
        android:layout_height="21dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:text="@string/landmark_optional"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/state" />

    <EditText
        android:id="@+id/landmark"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/roundedtext"
        android:hint="@string/landmark_optional"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView39" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="130dp"
        android:layout_height="21dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:text="@string/type_of_address"
        android:visibility="gone"
        android:textColor="@color/violet"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landmark" />

    <RadioGroup
        android:id="@+id/radiogrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView40">

        <RadioButton
            android:id="@+id/radiohome"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/radiooffice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/office"
            android:textColor="@color/black" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/addresschckbox"
        android:layout_width="30dp"
        android:layout_height="21dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:background="@color/transperent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogrp" />


    <TextView
        android:id="@+id/textView41"
        android:layout_width="199dp"
        android:layout_height="33dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="20dp"
        android:text="@string/mark_as_a_defalult_address"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogrp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_address_btn"
        android:layout_width="321dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedbtndarkblue"
        android:text="@string/save_address"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/landmark"
        app:layout_constraintStart_toStartOf="@+id/landmark"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>