<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_white"
    android:orientation="vertical"
    tools:context=".Activities.OtpVerfification">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textVie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/blue"
        android:text="@string/otp_validation"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/login_backarrow_1"
        app:layout_constraintTop_toTopOf="@+id/login_backarrow_1" />


    <ImageView
        android:id="@+id/login_backarrow_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="97dp"
        android:layout_marginTop="135dp"
        android:src="@drawable/otp_verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="282dp"
        android:text="@string/enter_the_otp_sent_to"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loggedin_number_text"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />


    <LinearLayout
        android:id="@+id/otp_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="329dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/OTP_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="@color/gr"
            android:maxLength="1"
            android:inputType="number"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/OTP_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="@color/gr"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/OTP_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="@color/gr"
            android:maxLength="1"
            android:inputType="number"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/OTP_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="@color/gr"
            android:inputType="number"
            android:clickable="true"
            android:focusable="true"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/OTP_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="@color/gr"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/OTP_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:background="@color/gr"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/countdown_timer"
        android:layout_width="39dp"
        android:layout_height="19dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="434dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/otp_nt_recieved"
        android:layout_width="115dp"
        android:layout_height="19dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="456dp"
        android:text="@string/didn_t_receive_otp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resend_otp_btn"
        android:layout_width="115dp"
        android:layout_height="19dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="456dp"
        android:text="@string/resend_otp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/app_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/login_btn_phone"
        app:layout_constraintEnd_toEndOf="@+id/login_btn_phone"
        app:layout_constraintStart_toStartOf="@+id/login_btn_phone"
        app:layout_constraintTop_toBottomOf="@+id/otp_linear_layout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn_phone"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="509dp"
        android:background="@drawable/roundedbtndarkblue"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>