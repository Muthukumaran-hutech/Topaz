<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/catimage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/doors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text=""
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/netural_black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/catimage"
        app:layout_constraintTop_toTopOf="@+id/catimage" />

    <TextView
        android:id="@+id/pri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:paddingTop="@dimen/_5sdp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/primary_blue"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingTop="@dimen/_5sdp"
        android:text="@string/square_feet"
        android:fontFamily="@font/roboto"
        android:textColor="@color/netural_black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pri"
        app:layout_constraintStart_toEndOf="@+id/pri"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <ImageView
        android:id="@+id/textView15"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
       android:src="@drawable/ic_baseline_delete_outline_24"
        app:layout_constraintEnd_toEndOf="@+id/pri"
        app:layout_constraintStart_toStartOf="@+id/pri"
        app:layout_constraintBottom_toBottomOf="@id/minusbtn"
        app:layout_constraintTop_toBottomOf="@+id/pri" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/minusbtn"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/minus_border"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:text="@string/minus"
        android:textColor="@color/netural_grey"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/numbercount"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />


    <EditText
        android:id="@+id/numbercount"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@color/neutal_light"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/plusbtn"
        app:layout_constraintStart_toEndOf="@+id/minusbtn"
        app:layout_constraintTop_toTopOf="@+id/minusbtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plusbtn"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/minus_border"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:text="@string/add"
        android:textColor="@color/netural_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numbercount"
        app:layout_constraintTop_toTopOf="@+id/numbercount" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/line_83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minusbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>