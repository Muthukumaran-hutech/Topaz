<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/product_image_layout"
        app:cardCornerRadius="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    <ImageView
        android:id="@+id/arrival_plwwoodss"
        android:layout_width="@dimen/_84sdp"
        android:layout_height="@dimen/_91sdp"

        android:scaleType="fitXY">


    </ImageView>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/arrival_plwwoodsstext"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/netural_black"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_bold"
        android:ellipsize="end"
        android:text=""
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/product_image_layout"
        app:layout_constraintTop_toBottomOf="@+id/product_image_layout" />

    <TextView
        android:id="@+id/arrivalProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/roboto"
        android:gravity="left"
        android:text=""
        android:textColor="@color/primary_blue"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/arrival_plwwoodsstext"
        app:layout_constraintTop_toBottomOf="@+id/arrival_plwwoodsstext" />



</androidx.constraintlayout.widget.ConstraintLayout>