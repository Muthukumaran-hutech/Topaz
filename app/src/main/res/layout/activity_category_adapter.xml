<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/list_selector">
    <androidx.cardview.widget.CardView
        android:layout_width="101dp"
        android:layout_height="102dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/categoryimagelayout">
    <ImageView
        android:id="@+id/plwwoodss"
        android:layout_width="101dp"
        android:layout_height="102dp"
        android:scaleType="fitXY"></ImageView>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/plwwoodsstext"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/netural_black"
        android:textSize="12sp"
        android:paddingBottom="@dimen/_2sdp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@+id/categoryimagelayout"
        app:layout_constraintStart_toStartOf="@+id/categoryimagelayout"
        app:layout_constraintTop_toBottomOf="@+id/categoryimagelayout" />


</androidx.constraintlayout.widget.ConstraintLayout>